/* How To Create a Modal Box */
/* https://www.w3schools.com/howto/howto_css_modals.asp */

.modalContainer,
.hintContainer {
    text-align: center;
    display: none;
    position: fixed;
    z-index: 1;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    overflow: auto;
    background-color: rgb(0,0,0);
    background-color: rgba(0,0,0,.4);
}
.modalContainer.active,
.hintContainer.active {
    display: block;
}
.modalContent {
    background-color: #fefefe;
    margin: 21% auto;
    padding: 11px;
    border: 1px solid #eee;
    width: 90%;
}
.modalContent p {
    font-size: .9375rem;
}
.modalContent p.modalContentThanks {
    text-align: center;
    margin: 15px 0 0;
}


.modalData {
    margin: 15px 0;
}
.modalData input {
    display: block;
    width: 100%;
    padding: 1px 6px;
    margin: 10px 0;
    border: 2px solid #eee;
    border-radius: 3px;
    outline: none;
}
.modalData input:invalid {
    border: 2px solid #e00;
}


.modalButtons {
    text-align: center;
    margin: 17px 0 0;
}
.modalButtons button {
    font-weight: 700;
    text-align: center;
    text-decoration: none;
    vertical-align: middle;
    padding: 2px 8px;
    margin: 0 5px;
    border: none;
    border-radius: 3px;
    outline: none;
    color: #fff;
    display: inline-block;
    cursor: pointer;
    -webkit-transition: background 0.2s;
    -o-transition: background 0.2s;
    transition: background 0.2s;
}
.modalButtons .modalButtonCancel {
    /*float: left;*/
    background: #ef5350;
}
.modalButtons .modalButtonSubmit {
    /*float: right;*/
    background: #66bb6a;
}


.hintContainer .hintThanksVoted,
.hintContainer .hintAlreadyVoted {
    display: none;
    padding: 0;
    margin: 0;
}
.hintContainer.active .hintThanksVoted.active,
.hintContainer.active .hintAlreadyVoted.active {
    display: block;
}
.hintContainer .hintButtonClose {
    background: #ef5350;
    margin-bottom: 10px;
}
