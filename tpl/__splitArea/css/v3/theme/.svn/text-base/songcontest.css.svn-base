/* Navigation */

.nav_portal li {
	width: 98px;
}

.navMain nav.navMainBottom {
  height: 130px;
  padding: 0 15px;
  background-color: rgba(0, 0, 0, 0.35);
}
.navMain nav a {
	font-family: "OpenSansBold";
	font-size: 2.5rem;
	/*font-weight: 700;*/
	line-height: 5.5rem;
	text-align: center;
	text-transform: uppercase;
	width: 310px;
	width: 300px;
	height: 100px;
	margin: 15px 15px 15px 0;
	background: rgba(0,0,0,0.3);
	background-clip: content-box;
	float: left;
	overflow: hidden;
	position: relative;
	transition: border 0.2s;
}
.navMain nav a > span {
	width: 100%;
	height: 100%;
	background: transparent;
	display: block;
	position: relative;
	transition: background 0.2s, color 0.2s;
}
.navMain nav a > span:before,
.navMain nav a > span:after {
	content: "";
	width: 2px;
	height: 100%;
	position: absolute;
	left: 0;
}
.navMain nav a > span:after {
	left: auto;
	right: 0;
}
.navMain nav a > span > span {
	background-image: linear-gradient(to right, #fff, #fff);
	background-size: 0% 2px;
	background-repeat: no-repeat;
	background-position: 0 90%;
	transition: background 0.2s;
}
.navMain nav a:last-child {
	margin: 15px 0;
}
.navMain nav a img {
	width: 340px;
	display: block;
	opacity: 0.35;
	position: absolute;
	transform: translate3d(0,0,0);
	transition: transform 0.3s;
}
.navMain nav a > .highlight {
	width: 80%;
	height: 100%;
	margin: 0 10%;
	position: absolute;
}
.navMain nav a > .highlight:before {
	content: "";
	height: 100%;
	width: 30px;
	background-image: linear-gradient(to bottom, rgba(255, 255, 255, 0.11), rgba(255, 255, 255, 0.2));
	background-size: 100% 100%;
	background-repeat: no-repeat;
	background-position: 0 100%;
	opacity: 0;
	position: absolute;
	left: 0;
	transform: skewX(32deg) translate3d(0,0,0);
	transition: opacity 0.2s, transform 0.2s;
}
.navMain nav a > .highlight:after {
	content: "";
	height: 100%;
	width: 45px;
	background-image: linear-gradient(to bottom, rgba(255, 255, 255, 0.2), rgba(255, 255, 255, 0.3));
	background-size: 100% 100%;
	background-repeat: no-repeat;
	background-position: 0 100%;
	opacity: 0;
	transform: skewX(32deg) translate3d(0,0,0);
	transition: opacity 0.2s, transform 0.2s;
	position: absolute;
	right: -15px;
}
.navMain nav a.news {
	border-top: 2px solid #ffc000;
	border-bottom: 2px solid #fcff00;
	color: #ffcc00;
}
.navMain nav a.news > span:before,
.navMain nav a.news > span:after {
	background: linear-gradient(to bottom, #ffc000, #fcff00);
}
.navMain nav a.artists {
	border-top: 2px solid #c60041;
	border-bottom: 2px solid #fd407e;
	color: #fc226a;
}
.navMain nav a.artists > span:before,
.navMain nav a.artists > span:after {
	background: linear-gradient(to bottom, #c60041, #fd407e);
}
.navMain nav a.videos {
	border-top: 2px solid #7a00d0;
	border-bottom: 2px solid #ad0dd5;
	color: #9c00ff;
}
.navMain nav a.videos > span:before,
.navMain nav a.videos > span:after {
	background: linear-gradient(to bottom, #7a00d0, #ad0dd5);
}
.navMain nav a:hover {
	border-color: transparent;
}
.navMain nav a.news:hover > span {
	background: rgba(255, 192, 0, 0.4);
	color: white;
}
.navMain nav a.artists:hover > span {
	background: rgba(198, 0, 65, 0.4);
	color: white;
}
.navMain nav a.videos:hover > span {
	background: rgba(122, 0, 208, 0.4);
	color: white;
}
.navMain nav a:hover > span:before,
.navMain nav a:hover > span:after {
	background: linear-gradient(to bottom, transparent, transparent);
}
.navMain nav a:hover > span > span {
	background-size: 100% 2px;
}
.navMain nav a:hover > img {
	transform: translate3d(-30px,0,0);
}
.navMain nav a:hover > .highlight:before {
	opacity: 1;
	transform: skewX(32deg) translate3d(10px,0,0);
}
.navMain nav a:hover > .highlight:after {
	opacity: 1;
	transform: skewX(32deg) translate3d(35px,0,0);
}


