.radioOe24Playlist .playlistBox {
	background-color: #dc1f1f;
	padding: 4px;
	font-family: "oe24", Arial, sans-serif;
}
/* Titel Bereich */
.radioOe24Playlist .playlistTitle {
	margin: 0px 6px 5px 0px;
}
.radioOe24Playlist .playlistTitle .radioOe24Logo {
	padding: 0 0 4px 10px;
}
.radioOe24Playlist .playlistTitle .live {
	font-family: "OpenSansRegular", Arial;
	font-size: 2.125rem;
	line-height: 1.2;
	float: right;
	background-color: #fff;
	color: #dc1f1f;
	padding: 1px 5px;
	margin: 3px 0 0 0;
	position: relative;
}
.radioOe24Playlist .playlistTitle .live:before {
	content: " ";
	position: absolute;
	bottom: 0;
	left: -27px;
	width: 27px;
	height: 30px;
	background-color: #dc1f1f;
	background-image: linear-gradient(to bottom, #dc1f1f 0%, #ba2323 100%);
}
.radioOe24Playlist .playlistTitle .live:after {
	content: " ";
	position: absolute;
	bottom: 0;
	left: -27px;
	width: 27px;
	height: 30px;
	border-color: transparent transparent #dc1f1f #dc1f1f;
	border-width: 15px 14px 15px 13px;
	border-style: solid;
}
/* Player Bereich */
.radioOe24Playlist .playlistBody.popup {
	cursor: pointer;
}
.radioOe24Playlist .playlistBody .now {
	background-color: #fff;
}
.radioOe24Playlist .playlistBody .info {
	background-image: url('/images/rl2014/radioCoverShadow.png');
	background-repeat: no-repeat;
	background-position: 0 1px;
}
.radioOe24Playlist .playlistBody .next {
	background-color: #dbeefa;
}
.radioOe24Playlist .playlistBody #btnPlayPause {
	background-image: url('/images/rl2014/radioPlayPause.png');
	background-repeat: no-repeat;
	width: 98px;
	height: 99px;
	float: left;
	margin: 25px 0 0 20px;
	cursor: pointer;
}
.radioOe24Playlist .playlistBody #btnPlayPause.pause:hover,
.radioOe24Playlist .playlistBody #btnPlayPause.play {
	background-position: 0 0;
}
.radioOe24Playlist .playlistBody #btnPlayPause.play:hover,
.radioOe24Playlist .playlistBody #btnPlayPause.pause {
	background-position: -98px 0;
}
.radioOe24Playlist .playlistBody #nowCover {
	margin: 7px 9px 0 30px;
	background-image: url('/images/layout/radiooe24/coverbg.png');
	background-image: url('/images/rl2014/radioOe24Cover.png');
	background-repeat: no-repeat;
	background-size: 145px 145px;
	box-shadow: 0 2px 6px rgba(0, 0, 0, 0.26);
