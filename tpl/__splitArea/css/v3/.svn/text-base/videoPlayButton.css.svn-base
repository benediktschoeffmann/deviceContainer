.videoPlay {
	position: absolute;
	bottom: 0;
	left: 0;
	width: 56px;
	height: 56px;
	border: 4px solid white;
	border-radius: 50%;
	transform: translate3d(25%, -25%, 0);
	-webkit-transform: translate3d(25%, -25%, 0);
	transition: border 0.21s ease-out, box-shadow 0.21s ease-out;
	box-shadow: inset 0 3px 3px 25px rgba(0,0,0,0.5);
}
.videoPlay.videoCenter {
	top: 50%;
	left: 50%;
	bottom: auto;
	transform: translate3d(-50%, -50%, 0);
	-webkit-transform: translate3d(-50%, -50%, 0);
}
.videoPlay.videoSmall {
	width: 28px;
	height: 28px;
	border: 2px solid white;
}
.videoPlay.videoStatic {
	position: relative;
	display: inline-block;
	margin: 3px 0;
	transform: translate3d(0, 0, 0);
	-webkit-transform: translate3d(0, 0, 0);
	vertical-align: middle;
}
.videoPlay.videoBig {
	width: 65px;
	height: 65px;
}
.videoPlay:before {
	content: " ";
	position: absolute;
	top: 50%;
	left: 50%;
	width: 0;
	height: 0;
	border-left: 26px solid white;
	border-top: 14px solid transparent;
	border-bottom: 14px solid transparent;
	transform: translate3d(-40%, -50%, 0);
	-webkit-transform: translate3d(-40%, -50%, 0);
	transition: border 0.21s ease-out;
}
.videoPlay.videoSmall:before {
	border-left: 13px solid white;
	border-top: 7px solid transparent;
	border-bottom: 7px solid transparent;
}
.videoPlay.videoBig:before {
  border-left: 30px solid #fff;
  border-top: 18px solid transparent;
  border-bottom: 18px solid transparent;
}
a:hover .videoPlay:before {
	/*border-left-color: rgb(221, 16, 16);*/
}
a:hover .videoPlay {
	/*border-color: rgb(221, 16, 16);*/
	box-shadow: inset 0 3px 3px 25px rgba(221,16,16,0.7)
}
