.storySliderBox {
	padding: 0 15px;
}
.storySliderBox.spaceTop {
	margin-top: 20px;
}
.storySliderBox.spaceBottom {
	margin-bottom: 20px;
}
.storySliderContent {
	width: 100%;
	height: 242px;
	padding: 20px 0;
	position: relative;
	border-bottom: 1px solid #d5d1db;
}
.storySlider {
	width: 872px;
	height: 200px;
	margin: 0 auto;
	overflow: hidden;
}
.storySliderItem {
	text-align: center;
    line-height: 1;
	float: left;
	width: 200px;
	height: 200px;
	margin: 0 9px;
	position: relative;
}
.storySliderItem a,
.storySliderItem img {
	display: block;
	width: 100%;
	height: 100%;
}
.storySliderItemDescripten {
	text-align: left;
    padding: 3px 5px 7px;
    background-color: #1a1a1a;
	position: absolute;
	left: 0;
	bottom: 0;
}
.storySliderItemDescripten .storySliderPreTitle,
.storySliderItemDescripten .storySliderTitle {
    font-family: "PTSerifItalic",sans-serif;
    font-size: .9375rem;
    color: #fff;
}
.storySliderItemDescripten .storySliderPreTitle {
	color: #c8aae3;
}
.storySliderItem a:hover .storySliderItemDescripten {
	background-color: #cc054a;
}
.storySliderBox .storySliderPrev,
.storySliderBox .storySliderNext {
	text-align: center;
	width: 40px;
	height: 40px;
	padding: 0;
	margin: -20px 0 0 0;
	border: none;
	border-radius: 20px;
	color: #fff;
	background-color: #cc054a;
	display: block;
	position: absolute;
	top: 50%;
	outline: 0;
}
.storySliderBox .storySliderPrev {
	left: 0;
}
.storySliderBox .storySliderNext {
	right: 0;
}
.storySliderBox .storySliderPrev:hover,
.storySliderBox .storySliderNext:hover {
	background-color: #f90b5e;
	cursor: pointer;
}
/* Story-Slider in der Content-Area */
.storySliderContentArea {
	padding: 0;
}
.storySliderContentArea .storySliderContent {
	height: 202px;
}
.storySliderContentArea .storySlider {
	width: 534px;
	height: 160px;
}
.storySliderContentArea .storySliderItem {
	width: 160px;
}
