.xlKonsole {
    padding: 0 0 10px;
}
.xlKonsole.marginTop {
    margin-top: 10px;
}
.xlKonsole.marginBottom {
    padding-bottom: 0;
    margin-bottom: 10px;
}


.xlKonsole img {
    width: 100%;
    display: block;
    background-color: #d5d5d5;
}


.xlKonsole .story {
    display: block;
    width: 100%;
    position: relative;
}
.xlKonsole .story:not(.overwrite) .imageContainer {
    /* aspect ratio 2:1 */
    width: 100%;
    padding-bottom: 50%;
    /*padding-bottom: 62.58%;*/
    position: relative;
}

.xlKonsole .story:not(.overwrite) .imageContainer img {
    display: block;
    background-color: #d5d5d5;
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    /*height: 100%;*/
    height: auto;
}
.xlKonsole .story.overwrite .imageContainer {
    width: 100%;
    padding-bottom: 0 !important;
}
.xlKonsole .story.overwrite .imageContainer img {
    height: auto;
    position: static;    
}

.xlKonsole .storyText {
    width: 100%;
    padding: 2%;
    position: absolute;
    left: 0;
    bottom: 0;
    /*background-color: #000;*/
    /*background-color: rgba(0,0,0,.3);*/
    background: transparent linear-gradient(rgba(0,0,0,0) 0%, rgba(0,0,0,.8) 100%);
    overflow: hidden;
}
.xlKonsole .storyText.noShadow {
    background: transparent;
}
.xlKonsole .storyPreTitle,
.xlKonsole .storyTitle,
.xlKonsole .storyLeadText {
    color: #fff;
    display: block;
}
.xlKonsole .storyPreTitle {
    /*font-size: 1rem;*/
    font-size: 0.7rem;
    font-weight: 700;
    line-height: 1.4;
    text-transform: uppercase;
    padding: 0 6px;
    margin: 0;
    background-color: #d0113a;
    display: inline-block;
    max-width: 100%;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}
.xlKonsole .storyTitle {
    font-family: "Open Sans Condensed";
    font-size: 1.8125rem;
    font-weight: 700;
    letter-spacing: -1pt;
    line-height: 1;
    display: block;
}
.xlKonsole .storyLeadText {
    /*font-family: "Open Sans";*/
    font-size: 1rem;
    line-height: 1.4;
    font-weight: 700;
    letter-spacing: -1pt;
    line-height: 1;
    display: block;
}
