    font-family: "Open Sans Condensed";
    font-weight: 700;
    line-height: 1;
    margin: 8px 0 0;
}
.xlKonsoleExtended .firstStory .textContainer .storyTitle {
    font-family: "Open Sans Condensed";
    font-weight: 700;
    font-size: 1.8125rem;
    letter-spacing: -1pt;
    line-height: 1;
    height: auto;
}
