.businessSliderBox {
	padding-bottom: 30px;
}
.businessSliderBoxSlider .story {
	width: 100%;
	display: none;
}
.businessSliderBoxSlider .flickity-viewport .story {
	display: block;
}

.businessSliderBoxSlider .flickity-viewport {
	margin-bottom: 10px;
}


/* Headline */
.businessSliderBoxHeader {
	margin: 0 0 5px 0;
}
.businessSliderBoxHeader .businessSliderBoxHeaderCaption {
	display: block;
	width: 100%;
}
.businessSliderBoxHeader .businessSliderBoxHeaderCaption .businessSliderBoxTitle {
	color: #FFF;
    
}


/* flickity buttons */

.businessSliderBox .flickitySlider .flickity-prev-next-button,
.businessSliderBox .flickitySlider .flickity-prev-next-button:hover {
    width: 32px;
    height: 32px;
    border-radius: 50%;
    background-color: #35549b;
    top: auto;
}
.businessSliderBox .flickitySlider .flickity-prev-next-button.previous:hover {
    left: -2px;
}
.businessSliderBox .flickitySlider .flickity-prev-next-button.next:hover {
    right: -2px;
}
.businessSliderBox .flickitySlider .flickity-prev-next-button svg .arrow {
    fill: #FFF;
    stroke: #FFF;
    /*fill: #184089;*/
    /*stroke: #184089;*/
}

.businessSliderBox .storiesCounter {
	font-size: .75rem;
	font-weight: 700;

	position: absolute;
	left: 50%;
	bottom: -20px;

	z-index: 10;
	transform: translateX(-50%);
}

/* TV-Quoten */

.businessSliderBox.bsTvQuotes .tvHl {
    width: 100%;
    text-align: center;
    color: #35549b;
    font-weight: 700;
    font-size: 1.125rem;
}

.businessSliderBox.bsTvQuotes .tvMain {
    width: 100%;
    background-color: #fff;
    text-align: center;
    padding: 2% 4% 4% 4%;
}
.businessSliderBox.bsTvQuotes .tvMain tr:nth-child(odd) td {
    background-color: #fff;
}
.businessSliderBox.bsTvQuotes .tvMain tr:nth-child(even) td {
    background-color: #e1e5e6;
}

.businessSliderBox.bsTvQuotes .tvTbl {
    border-spacing: 1px;
    border-collapse: separate;
}
.businessSliderBox.bsTvQuotes .tvTbl th,
.businessSliderBox.bsTvQuotes .tvTbl td {
    text-align: left;
}

.businessSliderBox.bsTvQuotes .tvShow {
    padding: 0 5px;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    width: 75%;
}
.businessSliderBox.bsTvQuotes .tvDrw {
    padding: 0 5px;
    width: 25%;
}
.businessSliderBox.bsTvQuotes .tvTbl th{
