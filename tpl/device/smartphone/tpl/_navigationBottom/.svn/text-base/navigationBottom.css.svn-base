.navigationBottom {
    position: fixed;
    bottom: 0;
    left: 0;

    width: 100%;
    height: 60px;

    background-color: #fff;

    z-index: 2;

    -webkit-box-shadow: 0 0 7px #ccc;
    -moz-box-shadow: 0 0 7px #ccc;
    box-shadow: 0 0 7px #ccc;
}

.navigationBottom ul,
.navigationBottom li {
    list-style: none;
}
.navigationBottom ul {
    display: table;
    table-layout: fixed;
    border-collapse: collapse;
    width: 100%;
}
.navigationBottom li {
    display: table-cell;

    padding: 5px 0;
    border-left: 2px solid #ededed;

    text-align: center;
}
.navigationBottom li:first-child {
    border-left: none;
}

.navigationBottom li a {
    display: block;
    color: #aaa;
}
.navigationBottom li a:hover {
    color: #3478ff;
}

@media all and (min-width: 768px) {
    .navigationBottom {
        width: 70%;
        margin-left: 30%;
    }
}
